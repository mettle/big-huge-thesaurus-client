{
    "name": "mettle/big-huge-thesaurus-client",
    "type": "library",
    "description": "PHP Client around Big Huge Thesaurus API",
    "keywords": [
        "mettle",
        "big-huge-thesaurus-client",
        "big huge thesaurus"
    ],
    "homepage": "https://github.com/mettle/big-huge-thesaurus-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Maurizio Bonani",
            "email": "maurizio@mettle.io",
            "homepage": "https://mettle.io/",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^7.3|^8.1",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.0.1"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Mettleworks\\BigHugeThesaurusClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mettleworks\\BigHugeThesaurusClient\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
